<div class="container">
<div class="col-sm-12">
<div class="panel panel-default">
  <div class="panel-heading">Winkels overzicht</div>
  <div class="panel-body"><%= link_to 'New Winkel', new_photo_path %></div>
</div>
</div>  
  <div class="row">
    <div class="col-sm-12">
    <% @photos.each do |photo| %>
    <div class="col-sm-4">
    <div class="panel panel-default">
      <div class="panel-heading"><%= photo.title %></div>
      <div class="panel-body"><%= link_to image_tag(photo.image.url(:thumb), class: 'media-object'), photo.image.url(:thumb), target: '_blank' %></div>
      <div class="panel-footer">
        <%= link_to 'Bekijken', photo_path(photo), class: 'btn btn-primary' %> <%= link_to 'Remove', photo_path(photo), class: 'btn btn-primary', method: :delete, data: {confirm: 'Are you sure?'} %>
      </div>
    </div>
    </div>
    <% end %>
  </div>
  </div>
</div>
